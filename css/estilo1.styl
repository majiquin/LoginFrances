@import 'nib/vendor'
@import 'nib/gradients'

vendor-prefixes = o ms moz webkit

b, strong
	font-weight bold
body
	background #DCDDDF url(http//cssdeck.com/uploads/media/items/7/7AF2Qzt.png)
	color #000
	font 14px Arial
	margin 0
	padding 0
	position relative
div .button
	background rgb(247,249,250)
	background linear-gradient(top,  rgba(247,249,250,1) 0%, rgba(240,240,240,1) 100%)
	margin 0 -1 15px
	padding 0 0 15px
		a
			background url(http://cssdeck.com/uploads/media/items/8/8bcLQqF.png) 0 -112px no-repeat
			color 7E7E7E
			font-size 17px
			padding 2px 0 2px 2px 

div input a
	text-decoration none
div input ahover
	text-decoration underline	
figure	
	margin 0
form:after
	content "."
	display block
	height 0
	clear both
	visibility hidden
	font-size 28px
	color #563D64


small
	font-size 10px

.left
	float left
.right
	float right
.alignleft
	float left
	margin-right 15px
.alignright
	float right
	margin-left 15px
.clearfixafter
.container
	margin 50px auto
	position relative
	width 100%
#content
	background #f9f9f9
	background linear-gradient(top,  rgba(248,248,248,1) 0%,rgba(249,249,249,1) 100%)
	box-shadow 0 1px 0 #fff inset
	border 1px solid #c4c6ca
	margin 0 auto
	padding 25px 0 0
	position relative
	text-align center
	text-shadow 0 1px 0 #fff
	width 400px

#content h2 
	color #7E7E7E
	font bold 25px Helvetica, Arial, sans-serif
	letter-spacing -0.05em
	line-height 20px
	margin 10px 0 30px

#content h2:before,
#content h2:after 
	content ""
	height 1px
	position absolute
	top 10px
	width 27%

#content h1:after
	background rgb(126,126,126)
	background linear-gradient(left,  rgba(126,126,126,1) 0%,rgba(255,255,255,1) 100%)
    right 0

#content h1:before
	background rgb(126,126,126)
	left 0

#content:after,
#content:before
	background #f9f9f9
	background linear-gradient(top,  rgba(248,248,248,1) 0%,rgba(249,249,249,1) 100%)
	border 1px solid #c4c6ca
	content ""
	display block
	height 100%
	left -1px
	position absolute
	width 100%

#content:after 
	background green 
	border-radius 5px
	transform rotate(5deg)
	top 0
	z-index -1

#content:before
	background yellow 
	border-radius 10px
	transform rotate(-7deg)
	top 0
	z-index -2

#content form
	margin 0 20px
	position relative
	/*con el siguiente codigo le colocar bordes redondeados de 3px a los
	inouts de texto y de password del formulario*/
#content form input[type="text"]
#content form input[type="password"]
	background: #eae7e7 url(http://cssdeck.com/uploads/media/items/8/8bcLQqF.png) no-repeat
	border 1px solid #c8c8c8
	border-radius 3px
	box-shadow 0 1px 0 #fff, 0 -2px 10px rgba(0,0,0,0.08) inset
	color #777
	font 13px Helvetica, Arial, sans-serif
	margin 0 0 7px
	padding 10px 2px 1px
	transition all 0.1s ease
	width 70%
#content form input[type="text"]:focus,
#content form input[type="password"]:focus,
	background-color #fff
	box-shadow  0 0 2px #ed1c24 inset
	border 1px solid #ed1c24
	font-size 15px
	outline none
#content form input[type="submit"]
	background rgb(254,231,154)
	background linear-gradient(top, rgba(254,231,154,1)0%,rgba(254,193,81,1)100%)
	border-radius 10px
	box-shadow 0 1px 0 rgba(255,255,255,0.5) inset
	border 1px solid #D69E21
	color #85592a
	cursor pointer 
	float left
	font bold 20px Helvetica, Arial, sans-serif
	height 35px
	margin 0 0 30px 15px
	position relative
	text-shadow 0 1px 0 rgba(255,255,255,0)
	width 120px
/*#content form input[placeholder="Nombre de usuario"]
	background-position 20px 20px
*/
#content form input[type="submit"]:hover
	background rgb(245,193,181)
	background linear-gradient(top, rgba(254,193,81,1)0%, rgba(254,231,154,1)100%)
	transition all 0.2 ease
#LogoForm
	width 50%
	margin 0
#username
	background-position 100% -2px !important
#password
	background-position 100% -62px !important
#content form div a
	color #004a80
	float right
	font-size 12px
	margin 10px 7px 0 0
	padding 1px 2px
	text-decoration none
